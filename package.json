{
  "name": "stoopcrypt",
  "version": "1.0.0",
  "description": "Advanced Encryption Tool by Muhammad Hassnain",
  "main": "main.js",
  "author": "Muhammad Hassnain",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:all": "electron-builder -mwl",
    "dist": "electron-builder --publish never",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild --force"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "bcryptjs": "^2.4.3",
    "blake3": "^2.1.7",
    "bson": "^5.5.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.1.1",
    "electron-store": "^8.1.0",
    "libsodium-wrappers": "^0.7.11",
    "node-forge": "^1.3.1",
    "secrets.js-grempe": "^2.0.0",
    "three": "^0.128.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^1.4.0"
  },
  "engines": {
    "node": ">=16.0.0 <21.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.muhammadhassnain.stoopcrypt",
    "productName": "StoopCrypt",
    "copyright": "Copyright Â© 2024 Muhammad Hassnain",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.map",
      "!**/*.test.js",
      "!**/test/**",
      "!**/__tests__/**",
      "!**/docs/**",
      "!**/examples/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.security"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Security"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StoopCrypt"
    }
  }
}
